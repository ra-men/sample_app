<% provide(:title, 'Sign in') %>
<h1>Sign in</h1>

<%= form_tag sessions_path do %>
  <div class="field">
    <%= label_tag :email %><br />
    <%= text_field_tag :email %><br />
  </div>
  <div class="field">
    <%= label_tag :password%><br />
    <%= password_field_tag :password%><br />
  </div>
  <div class="actions">
    <%= submit_tag "Sign in" %>
  </div>
<% end %>

<p> New user? <%= link_to "Sign up now!", signup_path %></p>

